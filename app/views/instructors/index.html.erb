<p id="notice"><%= notice %></p>

<% if logged_in? %>

<h1>Instructors</h1>
<br>
<%= link_to "Back to Profile Page", user_path(current_user) %>
<br><br>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.first %></td>
        <td><%= instructor.last %></td>
        <td><%= link_to 'Show More', instructor %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>

<h3>Our apologies.</h3>

<p>You must be signed up to this site in order to view instructors.</p>

<%= link_to "Sign In", login_path %>

<br><br><br>

<h3>New here?</h3>

<%= link_to "Sign Up", new_user_path %>

<% end %>
