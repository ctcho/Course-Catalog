<h1>Sign Up</h1>
<br>
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.submit "Sign Up", class: "btn btn-primary" %>
<% end %>
<br>
<%= link_to 'Back', root_path %>
