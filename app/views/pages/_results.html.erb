<% if @results.count > 0 %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @results.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.code %></td>
          <td><%= link_to 'Show More', course %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% else %>
<p>There are no courses that match your given parameters.</p>

<% end %>
