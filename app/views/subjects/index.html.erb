<p id="notice"><%= notice %></p>

<% if logged_in? %>

<h1>Subjects</h1>
<br>
<%= link_to "Back to Profile Page", user_path(current_user) %>
<br><br>
<table>
  <thead>
    <tr>
      <th>Id number</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.id_number %></td>
        <td><%= subject.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>

<h3>Our apologies.</h3>

<p>You must be signed up to this site in order to view subjects.</p>

<%= link_to "Sign In", login_path %>

<br><br><br>

<h3>New here?</h3>

<%= link_to "Sign Up", new_user_path %>

<% end %>
